{
	"name": "auto-require-roblox",
	"displayName": "Auto Require Roblox",
	"description": "Roblox module autocompletion.",
	"version": "1.1.2",
	"publisher": "Ezzenix",
	"keywords": [
		"Programming Languages"
	],
	"icon": "assets/Logo.png",
	"engines": {
		"vscode": "^1.78.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Ezzenix/AutoRequireRoblox"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:lua",
		"onLanguage:luau"
	],
	"main": "dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "autorequireroblox.config",
				"title": "Create configuration file",
				"category": "AutoRequire"
			},
			{
				"command": "autorequireroblox.updatecollections",
				"title": "Update all collections",
				"category": "AutoRequire"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.78.0",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.59.1",
		"@vscode/test-electron": "^2.3.0",
		"esbuild": "^0.20.2",
		"eslint": "^8.39.0",
		"glob": "^8.1.0",
		"typescript": "^5.4.4"
	}
}
